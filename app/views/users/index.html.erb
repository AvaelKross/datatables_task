<div class="user_datatable">
<table class="table table-striped table-hover" id ="users">
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>First</th>
    <th>Last</th>

  </tr>
</thead>
  <tbody>

<% User.all.each do |user| %>
  
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.first %></td>
    <td> <%= user.last %></td>

    </tr>
  <% end %>
     </tbody>
</table>
</div>
<br><br>
<br><br>


<script>
$('#users').DataTable({
      dom: 'Blfrtip',
      autoWidth: false,
      pagingType: 'full_numbers',
      iDisplayLength: 50,
      buttons: [
            'csv'
        ]
  });


</script>
